# AI Scheduler Environment Configuration
# Copy this file to .env and fill in your actual values

# Flask Application Settings
SECRET_KEY=your-secret-key-here
DEBUG=False
PORT=5000

GOOGLE_CLIENT_ID=YOUR_CLIENT_ID
GOOGLE_CLIENT_SECRET=YOUR_CLIENT_SECRET
GOOGLE_REDIRECT_URI=http://localhost:8000/oauth/callback
SESSION_SECRET=dev-secret



















*/# Google OAuth Configuration
# Get these from Google Cloud Console: https://console.cloud.google.com/
GOOGLE_CLIENT_ID=your-google-client-id.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
OAUTH_REDIRECT_URI=http://localhost:8080/callback

# Database Configuration (if using database)
DATABASE_URL=sqlite:///ai_scheduler.db
# For PostgreSQL: postgresql://username:password@localhost/ai_scheduler
# For MySQL: mysql://username:password@localhost/ai_scheduler

# AI/LLM Configuration
OPENAI_API_KEY=your-openai-api-key
# or for other providers:
# ANTHROPIC_API_KEY=your-anthropic-api-key
# GOOGLE_AI_API_KEY=your-google-ai-api-key

# Email Configuration
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_USE_TLS=True

# Calendar Settings
DEFAULT_TIMEZONE=UTC
BUSINESS_HOURS_START=09:00
BUSINESS_HOURS_END=17:00
DEFAULT_MEETING_DURATION=60

# Application Settings
CHECK_EMAIL_INTERVAL=300
MAX_SCHEDULING_ATTEMPTS=3
SESSION_TIMEOUT_HOURS=24

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=ai_scheduler.log

# Security Settings
ALLOWED_HOSTS=localhost,127.0.0.1
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Feature Flags
ENABLE_EMAIL_PROCESSING=True
ENABLE_CALENDAR_SYNC=True
ENABLE_AI_SCHEDULING=True

# External Service Configuration
ZOOM_API_KEY=your-zoom-api-key
ZOOM_API_SECRET=your-zoom-api-secret
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
TEAMS_WEBHOOK_URL=https://outlook.office.com/webhook/your-teams-webhook

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000 